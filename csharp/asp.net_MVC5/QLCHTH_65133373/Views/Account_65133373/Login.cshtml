@model QLCHTH_65133373.Models.ViewModels.LoginViewModel
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Đăng nhập</title>
    <link href="~/Content/css/styles.css" rel="stylesheet" />
    <script src="https://use.fontawesome.com/releases/v6.3.0/js/all.js" crossorigin="anonymous"></script>
    <style>
        body {
            background-color: #212529;
            min-height: 100vh;
        }
        .login-card {
            max-width: 450px;
            margin: 0 auto;
        }
        .login-header {
            text-align: center;
            margin-bottom: 2rem;
        }
        .login-header i {
            font-size: 4rem;
            color: #0d6efd;
            margin-bottom: 1rem;
        }
        .login-header h1 {
            font-size: 1.8rem;
            font-weight: 600;
            color: #333;
        }
        .login-header p {
            color: #6c757d;
        }
        .form-floating > label {
            padding-left: 1rem;
        }
        .btn-login {
            background-color: #0d6efd;
            border: none;
            padding: 0.75rem;
            font-size: 1.1rem;
            font-weight: 500;
        }
        .btn-login:hover {
            background-color: #0b5ed7;
            transform: translateY(-1px);
            box-shadow: 0 4px 12px rgba(13, 110, 253, 0.4);
        }
        .card {
            border: none;
            border-radius: 1rem;
            box-shadow: 0 0.5rem 1rem rgba(0, 0, 0, 0.15);
        }
        .card-body {
            padding: 2.5rem;
        }
        .input-group-text {
            background-color: #f8f9fa;
            border-right: none;
        }
        .form-control {
            border-left: none;
        }
        .form-control:focus {
            box-shadow: none;
            border-color: #ced4da;
        }
        .input-group:focus-within .input-group-text {
            border-color: #86b7fe;
        }
        .input-group:focus-within .form-control {
            border-color: #86b7fe;
        }
        .footer-text {
            text-align: center;
            margin-top: 2rem;
            color: rgba(255, 255, 255, 0.8);
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100">
            <div class="col-lg-5">
                <div class="card login-card">
                    <div class="card-body">
                        <div class="login-header">
                            <i class="fas fa-store"></i>
                            <h1>Đăng nhập</h1>
                        </div>
                        
                        @using (Html.BeginForm("Login", "Account_65133373", new { returnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "needs-validation" }))
                        {
                            @Html.AntiForgeryToken()
                            
                            if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                    <i class="fas fa-exclamation-circle me-2"></i>
                                    @Html.ValidationSummary(true, "", new { @class = "mb-0" })
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                                </div>
                            }
                            
                            <div class="mb-3">
                                <label class="form-label" for="TenDangNhap">
                                    <i class="fas fa-user me-2"></i>Tên đăng nhập
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-user"></i></span>
                                    @Html.TextBoxFor(m => m.TenDangNhap, new { @class = "form-control form-control-lg", placeholder = "Nhập tên đăng nhập", autofocus = "autofocus" })
                                </div>
                                @Html.ValidationMessageFor(m => m.TenDangNhap, "", new { @class = "text-danger small" })
                            </div>
                            
                            <div class="mb-4">
                                <label class="form-label" for="MatKhau">
                                    <i class="fas fa-lock me-2"></i>Mật khẩu
                                </label>
                                <div class="input-group">
                                    <span class="input-group-text"><i class="fas fa-lock"></i></span>
                                    @Html.PasswordFor(m => m.MatKhau, new { @class = "form-control form-control-lg", placeholder = "Nhập mật khẩu" })
                                </div>
                                @Html.ValidationMessageFor(m => m.MatKhau, "", new { @class = "text-danger small" })
                            </div>
                            
                            <div class="d-grid gap-2">
                                <button type="submit" class="btn btn-primary btn-login">
                                    <i class="fas fa-sign-in-alt me-2"></i>Đăng nhập
                                </button>
                            </div>
                        }
                    </div>
                </div>
                
                <div class="footer-text">
                    <small>&copy; @DateTime.Now.Year - MSSV: 65133373</small>
                </div>
            </div>
        </div>
    </div>

    <script src="~/Scripts/jquery-3.7.0.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <script src="~/Scripts/bootstrap.bundle.js"></script>
</body>
</html>
