@model QLCHTH_65133373.Models.ViewModels.PagedList<QLCHTH_65133373.Models.ViewModels.HoaDonViewModel>
@{
    ViewBag.Title = "Quản lý hóa đơn";
}

<h1 class="mt-4">
    <i class="fas fa-file-invoice me-2"></i>Quản lý hóa đơn
</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard_65133373")">Dashboard</a></li>
    <li class="breadcrumb-item active">Hóa đơn</li>
</ol>

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div><i class="fas fa-table me-1"></i>Danh sách hóa đơn</div>
        <a href="@Url.Action("Create")" class="btn btn-primary btn-sm">
            <i class="fas fa-plus me-1"></i>Tạo hóa đơn
        </a>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3 mb-4">
            <div class="col-md-3">
                <label class="form-label small">Từ ngày</label>
                <input type="date" name="tuNgay" class="form-control" value="@ViewBag.TuNgay" />
            </div>
            <div class="col-md-3">
                <label class="form-label small">Đến ngày</label>
                <input type="date" name="denNgay" class="form-control" value="@ViewBag.DenNgay" />
            </div>
            <div class="col-md-3">
                <label class="form-label small">Nhân viên</label>
                @{
                    var selectedNhanVien = ViewBag.NhanVien as int?;
                }
                <select name="nhanVien" class="form-select">
                    <option value="" @(selectedNhanVien == null ? "selected" : "")>-- Tất cả --</option>
                    @foreach (var nv in ViewBag.NhanVienList as SelectList)
                    {
                        var nvValue = int.Parse(nv.Value);
                        <option value="@nv.Value" @(selectedNhanVien == nvValue ? "selected" : "")>@nv.Text</option>
                    }
                </select>
            </div>
            <div class="col-md-3 d-flex align-items-end gap-2">
                <button type="submit" class="btn btn-outline-primary"><i class="fas fa-filter me-1"></i>Lọc</button>
                <a href="@Url.Action("Index")" class="btn btn-outline-secondary"><i class="fas fa-times me-1"></i>Xóa lọc</a>
            </div>
        </form>

        @if (Model.Items.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 80px;">Mã HĐ</th>
                            <th>Ngày lập</th>
                            <th>Nhân viên</th>
                            <th class="text-end">Tổng tiền</th>
                            <th class="text-end">Giảm giá</th>
                            <th class="text-end">Thành tiền</th>
                            <th style="width: 100px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            <tr>
                                <td><strong>@item.MaHD</strong></td>
                                <td>@item.NgayBan.ToString("dd/MM/yyyy HH:mm")</td>
                                <td>@item.TenNhanVien</td>
                                <td class="text-end">@item.TongTien.ToString("N0") đ</td>
                                <td class="text-end text-danger">-@item.TongGiamGia.ToString("N0") đ</td>
                                <td class="text-end fw-bold text-success">@item.ThanhToan.ToString("N0") đ</td>
                                <td>
                                    <a href="@Url.Action("Details", new { id = item.MaHD })" class="btn btn-primary btn-action" title="Xem chi tiết">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <button type="button" class="btn btn-secondary btn-action" title="In hóa đơn" onclick="printInvoice(@item.MaHD)">
                                        <i class="fas fa-print"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                    <tfoot class="table-light">
                        <tr class="fw-bold">
                            <td colspan="3" class="text-center">Tổng cộng (@Model.TotalCount hóa đơn)</td>
                            <td class="text-end">@Model.Items.Sum(x => x.TongTien).ToString("N0") đ</td>
                            <td class="text-end text-danger">-@Model.Items.Sum(x => x.TongGiamGia).ToString("N0") đ</td>
                            <td class="text-end text-success">@Model.Items.Sum(x => x.ThanhToan).ToString("N0") đ</td>
                            <td></td>
                        </tr>
                    </tfoot>
                </table>
            </div>
            @Html.Partial("_Pagination", Model)
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <p class="text-muted">Không tìm thấy hóa đơn nào</p>
            </div>
        }
    </div>
</div>

@section scripts {
    <script>
        function printInvoice(id) {
            window.open('@Url.Action("Print")/' + id, '_blank', 'width=800,height=600');
        }
    </script>
}
