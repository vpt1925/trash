@model QLCHTH_65133373.Models.ViewModels.NhaCungCapViewModel
@{
    ViewBag.Title = "Thêm nhà cung cấp";
}

<h1 class="mt-4"><i class="fas fa-plus-circle me-2"></i>Thêm nhà cung cấp mới</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard_65133373")">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Nhà cung cấp</a></li>
    <li class="breadcrumb-item active">Thêm mới</li>
</ol>

<div class="card mb-4">
    <div class="card-header"><i class="fas fa-truck me-1"></i>Thông tin nhà cung cấp</div>
    <div class="card-body">
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Tên nhà cung cấp <span class="text-danger">*</span></label>
                        @Html.TextBoxFor(m => m.TenNCC, new { @class = "form-control", placeholder = "Nhập tên nhà cung cấp" })
                        @Html.ValidationMessageFor(m => m.TenNCC, "", new { @class = "text-danger small" })
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Địa chỉ</label>
                        @Html.TextBoxFor(m => m.DiaChi, new { @class = "form-control", placeholder = "Địa chỉ nhà cung cấp" })
                        @Html.ValidationMessageFor(m => m.DiaChi, "", new { @class = "text-danger small" })
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Số điện thoại</label>
                        @Html.TextBoxFor(m => m.DienThoai, new { @class = "form-control", placeholder = "Số điện thoại liên hệ" })
                        @Html.ValidationMessageFor(m => m.DienThoai, "", new { @class = "text-danger small" })
                    </div>
                </div>
            </div>
            <hr />
            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="fas fa-arrow-left me-1"></i>Quay lại</a>
                <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Lưu nhà cung cấp</button>
            </div>
        }
    </div>
</div>
