@model QLCHTH_65133373.Models.ViewModels.PagedList<QLCHTH_65133373.Models.ViewModels.TaiKhoanViewModel>
@{
    ViewBag.Title = "Quản lý tài khoản";
}

<h1 class="mt-4">
    <i class="fas fa-users me-2"></i>Quản lý tài khoản
</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard_65133373")">Dashboard</a></li>
    <li class="breadcrumb-item active">Tài khoản</li>
</ol>

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div><i class="fas fa-table me-1"></i>Danh sách tài khoản</div>
        <a href="@Url.Action("Create")" class="btn btn-primary btn-sm">
            <i class="fas fa-plus me-1"></i>Thêm tài khoản
        </a>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3 mb-4">
            <div class="col-md-4">
                <div class="input-group">
                    <span class="input-group-text"><i class="fas fa-search"></i></span>
                    <input type="text" name="search" class="form-control" placeholder="Tìm theo tên đăng nhập, họ tên..." value="@ViewBag.Search" />
                </div>
            </div>
            <div class="col-md-3">
                <select name="loai" class="form-select">
                    <option value="">-- Tất cả loại --</option>
                    <option value="0" @(ViewBag.LoaiTaiKhoan == "0" ? "selected" : "")>Quản trị viên</option>
                    <option value="1" @(ViewBag.LoaiTaiKhoan == "1" ? "selected" : "")>Thu ngân</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-outline-primary w-100">Lọc</button>
            </div>
        </form>

        @if (Model.Items.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 80px;">Mã</th>
                            <th>Tên đăng nhập</th>
                            <th>Tên hiển thị</th>
                            <th class="text-center">Loại tài khoản</th>
                            <th>Ngày tạo</th>
                            <th style="width: 150px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            var currentMaTK = Session["MaTK"] != null ? Convert.ToInt32(Session["MaTK"]) : 0;
                            var isCurrentUser = currentMaTK == item.MaTK;
                            <tr class="@(isCurrentUser ? "table-info" : "")">
                                <td><strong>@item.MaTK</strong></td>
                                <td>
                                    @item.TenDangNhap
                                    @if (isCurrentUser)
                                    {
                                        <span class="badge bg-primary ms-1">Bạn</span>
                                    }
                                </td>
                                <td>@item.TenHienThi</td>
                                <td class="text-center">
                                    @if (item.LoaiTaiKhoan == 0)
                                    {
                                        <span class="badge bg-danger"><i class="fas fa-crown me-1"></i>Quản trị viên</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-success"><i class="fas fa-cash-register me-1"></i>Thu ngân</span>
                                    }
                                </td>
                                <td>@item.NgayTao.ToString("dd/MM/yyyy")</td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Edit", new { id = item.MaTK })" class="btn btn-warning btn-action" title="Sửa">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a href="@Url.Action("ResetPassword", new { id = item.MaTK })" class="btn btn-info btn-action" title="Reset mật khẩu">
                                            <i class="fas fa-key"></i>
                                        </a>
                                        @if (!isCurrentUser)
                                        {
                                            <button type="button" class="btn btn-danger btn-action" title="Xóa" onclick="confirmDelete(@item.MaTK, '@item.TenDangNhap')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @Html.Partial("_Pagination", Model)
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <p class="text-muted">Không tìm thấy tài khoản nào</p>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-exclamation-triangle text-warning me-2"></i>Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa tài khoản "<strong id="deleteName"></strong>"?</p>
                <p class="text-danger small mb-0"><i class="fas fa-exclamation-circle me-1"></i>Hành động này không thể hoàn tác!</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                @using (Html.BeginForm("Delete", "TaiKhoan_65133373", FormMethod.Post, new { id = "deleteForm" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteId" />
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash me-1"></i>Xóa</button>
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        function confirmDelete(id, name) {
            document.getElementById('deleteId').value = id;
            document.getElementById('deleteName').textContent = name;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}
