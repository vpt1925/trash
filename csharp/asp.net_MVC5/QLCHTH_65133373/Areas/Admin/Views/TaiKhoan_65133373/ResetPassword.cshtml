@model QLCHTH_65133373.Models.ViewModels.TaiKhoanViewModel
@{
    ViewBag.Title = "Reset mật khẩu";
    string defaultPassword = Model.LoaiTaiKhoan == 0 ? "admin" : "123";
    string loaiTK = Model.LoaiTaiKhoan == 0 ? "Quản trị viên" : "Thu ngân";
}

<h1 class="mt-4"><i class="fas fa-key me-2"></i>Reset mật khẩu</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard_65133373")">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Tài khoản</a></li>
    <li class="breadcrumb-item active">Reset mật khẩu</li>
</ol>

<div class="card mb-4">
    <div class="card-header bg-warning text-dark">
        <i class="fas fa-exclamation-triangle me-1"></i>Xác nhận Reset mật khẩu
    </div>
    <div class="card-body">
        <div class="alert alert-warning">
            <i class="fas fa-exclamation-triangle me-2"></i>
            <strong>Bạn có chắc chắn muốn reset mật khẩu?</strong>
        </div>
        
        <table class="table table-bordered" style="max-width: 500px;">
            <tr>
                <th style="width: 150px;">Tên đăng nhập</th>
                <td><strong>@Model.TenDangNhap</strong></td>
            </tr>
            <tr>
                <th>Tên hiển thị</th>
                <td>@Model.TenHienThi</td>
            </tr>
            <tr>
                <th>Loại tài khoản</th>
                <td>
                    @if (Model.LoaiTaiKhoan == 0)
                    {
                        <span class="badge bg-danger">@loaiTK</span>
                    }
                    else
                    {
                        <span class="badge bg-primary">@loaiTK</span>
                    }
                </td>
            </tr>
            <tr>
                <th>Mật khẩu mới</th>
                <td><code>@defaultPassword</code></td>
            </tr>
        </table>
        
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <hr />
            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index")" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i>Hủy
                </a>
                <button type="submit" class="btn btn-warning">
                    <i class="fas fa-key me-1"></i>Xác nhận Reset
                </button>
            </div>
        }
    </div>
</div>
