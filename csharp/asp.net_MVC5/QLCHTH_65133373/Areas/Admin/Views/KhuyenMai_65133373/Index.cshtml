@model QLCHTH_65133373.Models.ViewModels.PagedList<QLCHTH_65133373.Models.ViewModels.KhuyenMaiViewModel>
@{
    ViewBag.Title = "Quản lý khuyến mãi";
}

<h1 class="mt-4">
    <i class="fas fa-tags me-2"></i>Quản lý khuyến mãi
</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard_65133373")">Dashboard</a></li>
    <li class="breadcrumb-item active">Khuyến mãi</li>
</ol>

<div class="card mb-4">
    <div class="card-header d-flex justify-content-between align-items-center">
        <div><i class="fas fa-table me-1"></i>Danh sách khuyến mãi</div>
        <a href="@Url.Action("Create")" class="btn btn-primary btn-sm">
            <i class="fas fa-plus me-1"></i>Thêm khuyến mãi
        </a>
    </div>
    <div class="card-body">
        <form method="get" class="row g-3 mb-4">
            <div class="col-md-3">
                <input type="text" name="search" class="form-control" placeholder="Tìm theo mã hoặc tên..." value="@ViewBag.Search" />
            </div>
            <div class="col-md-3">
                <select name="trangThai" class="form-select">
                    <option value="">-- Tất cả trạng thái --</option>
                    <option value="chuabatdau" @(ViewBag.TrangThai == "chuabatdau" ? "selected" : "")>Chưa bắt đầu</option>
                    <option value="dangchay" @(ViewBag.TrangThai == "dangchay" ? "selected" : "")>Đang chạy</option>
                    <option value="daketthuc" @(ViewBag.TrangThai == "daketthuc" ? "selected" : "")>Đã kết thúc</option>
                </select>
            </div>
            <div class="col-md-2">
                <button type="submit" class="btn btn-outline-primary w-100"><i class="fas fa-filter me-1"></i>Lọc</button>
            </div>
        </form>

        @if (Model.Items.Any())
        {
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead class="table-light">
                        <tr>
                            <th style="width: 80px;">Mã</th>
                            <th>Tên khuyến mãi</th>
                            <th>Ngày bắt đầu</th>
                            <th>Ngày kết thúc</th>
                            <th class="text-center">Trạng thái</th>
                            <th class="text-center">Số SP</th>
                            <th style="width: 140px;">Thao tác</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model.Items)
                        {
                            var now = DateTime.Now;
                            string statusClass = "";
                            string statusText = "";
                            bool canEdit = true;
                            bool canEditFull = true;
                            
                            if (now < item.NgayBatDau)
                            {
                                statusClass = "bg-info";
                                statusText = "Chưa bắt đầu";
                                canEditFull = true;
                            }
                            else if (now >= item.NgayBatDau && now <= item.NgayKetThuc)
                            {
                                statusClass = "bg-success";
                                statusText = "Đang chạy";
                                canEditFull = false; // Chỉ sửa ngày kết thúc
                            }
                            else
                            {
                                statusClass = "bg-secondary";
                                statusText = "Đã kết thúc";
                                canEdit = false;
                                canEditFull = false;
                            }
                            
                            <tr>
                                <td><strong>@item.MaKM</strong></td>
                                <td>@item.TenKM</td>
                                <td>@item.NgayBatDau.ToString("dd/MM/yyyy")</td>
                                <td>@item.NgayKetThuc.ToString("dd/MM/yyyy")</td>
                                <td class="text-center"><span class="badge @statusClass">@statusText</span></td>
                                <td class="text-center"><span class="badge bg-primary">@item.SoSanPham</span></td>
                                <td>
                                    <div class="btn-group" role="group">
                                        <a href="@Url.Action("Details", new { id = item.MaKM })" class="btn btn-primary btn-action" title="Xem chi tiết">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        @if (canEdit)
                                        {
                                            <a href="@Url.Action("Edit", new { id = item.MaKM })" class="btn btn-warning btn-action" title="@(canEditFull ? "Chỉnh sửa" : "Sửa ngày kết thúc")">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <button class="btn btn-warning btn-action" disabled title="Không thể sửa">
                                                <i class="fas fa-edit"></i>
                                            </button>
                                        }
                                        @if (now < item.NgayBatDau)
                                        {
                                            <button type="button" class="btn btn-danger btn-action" title="Xóa" onclick="confirmDelete(@item.MaKM, '@item.TenKM')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
            @Html.Partial("_Pagination", Model)
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                <p class="text-muted">Không tìm thấy khuyến mãi nào</p>
            </div>
        }
    </div>
</div>

<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title"><i class="fas fa-exclamation-triangle text-warning me-2"></i>Xác nhận xóa</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p>Bạn có chắc chắn muốn xóa khuyến mãi "<strong id="deleteName"></strong>"?</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Hủy</button>
                @using (Html.BeginForm("Delete", "KhuyenMai_65133373", FormMethod.Post, new { id = "deleteForm" }))
                {
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="id" id="deleteId" />
                    <button type="submit" class="btn btn-danger"><i class="fas fa-trash me-1"></i>Xóa</button>
                }
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        function confirmDelete(id, name) {
            document.getElementById('deleteId').value = id;
            document.getElementById('deleteName').textContent = name;
            new bootstrap.Modal(document.getElementById('deleteModal')).show();
        }
    </script>
}
