@model QLCHTH_65133373.Models.ViewModels.KhuyenMaiViewModel
@{
    ViewBag.Title = "Chỉnh sửa khuyến mãi";
    var now = DateTime.Now;
    var canEditFull = now < Model.NgayBatDau;
    var isRunning = now >= Model.NgayBatDau && now <= Model.NgayKetThuc;
    var sanPhamList = ViewBag.SanPhamList as List<QLCHTH_65133373.Models.SanPham>;
}

<h1 class="mt-4"><i class="fas fa-edit me-2"></i>Chỉnh sửa khuyến mãi</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Dashboard_65133373")">Dashboard</a></li>
    <li class="breadcrumb-item"><a href="@Url.Action("Index")">Khuyến mãi</a></li>
    <li class="breadcrumb-item active">Chỉnh sửa</li>
</ol>

@if (isRunning)
{
    <div class="alert alert-warning">
        <i class="fas fa-exclamation-triangle me-1"></i>
        <strong>Lưu ý:</strong> Khuyến mãi đang chạy, bạn chỉ có thể sửa ngày kết thúc.
    </div>
}

<div class="card mb-4">
    <div class="card-header">
        <i class="fas fa-tags me-1"></i>Thông tin khuyến mãi - Mã: <strong>@Model.MaKM</strong>
        @if (isRunning)
        {
            <span class="badge bg-success ms-2">Đang chạy</span>
        }
        else if (canEditFull)
        {
            <span class="badge bg-info ms-2">Chưa bắt đầu</span>
        }
    </div>
    <div class="card-body">
        @using (Html.BeginForm("Edit", "KhuyenMai_65133373", FormMethod.Post, new { id = "formKhuyenMai" }))
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.MaKM)
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Tên khuyến mãi <span class="text-danger">*</span></label>
                        @Html.TextBoxFor(m => m.TenKM, new { @class = "form-control", @readonly = !canEditFull })
                        @Html.ValidationMessageFor(m => m.TenKM, "", new { @class = "text-danger small" })
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mô tả</label>
                        @Html.TextAreaFor(m => m.MoTa, new { @class = "form-control", rows = "3", @readonly = !canEditFull })
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="form-label">Ngày bắt đầu</label>
                        @Html.TextBoxFor(m => m.NgayBatDau, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date", @readonly = !canEditFull })
                        @Html.ValidationMessageFor(m => m.NgayBatDau, "", new { @class = "text-danger small" })
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ngày kết thúc <span class="text-danger">*</span></label>
                        @Html.TextBoxFor(m => m.NgayKetThuc, "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        @Html.ValidationMessageFor(m => m.NgayKetThuc, "", new { @class = "text-danger small" })
                    </div>
                </div>
            </div>
            
            if (canEditFull)
            {
                <hr />
                <h5 class="mb-3"><i class="fas fa-boxes me-1"></i>Sản phẩm áp dụng</h5>
                
                <div class="row mb-3">
                    <div class="col-md-6">
                        <div class="input-group">
                            <span class="input-group-text"><i class="fas fa-search"></i></span>
                            <input type="text" id="searchSanPham" class="form-control" placeholder="Tìm sản phẩm theo tên hoặc mã..." />
                        </div>
                    </div>
                </div>
                
                <div class="row">
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-light">
                                <i class="fas fa-list me-1"></i>Danh sách sản phẩm
                            </div>
                            <div class="card-body p-0" style="max-height: 400px; overflow-y: auto;">
                                <table class="table table-hover mb-0" id="tableSanPham">
                                    <thead class="table-light sticky-top">
                                        <tr>
                                            <th style="width: 60px;">Mã</th>
                                            <th>Tên sản phẩm</th>
                                            <th class="text-end" style="width: 100px;">Giá</th>
                                            <th style="width: 60px;"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (sanPhamList != null)
                                        {
                                            foreach (var sp in sanPhamList)
                                            {
                                                var isSelected = Model.ChiTietKhuyenMais.Any(x => x.MaSP == sp.MaSP);
                                                <tr data-masp="@sp.MaSP" data-tensp="@sp.TenSP" data-gia="@sp.DonGia" style="@(isSelected ? "display:none" : "")">
                                                    <td>@sp.MaSP</td>
                                                    <td>@sp.TenSP</td>
                                                    <td class="text-end">@sp.DonGia.ToString("N0")đ</td>
                                                    <td>
                                                        <button type="button" class="btn btn-sm btn-success btn-add-sp" title="Thêm">
                                                            <i class="fas fa-plus"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="card">
                            <div class="card-header bg-success text-white">
                                <i class="fas fa-check-circle me-1"></i>Sản phẩm được chọn (<span id="countSelected">@Model.ChiTietKhuyenMais.Count</span>)
                            </div>
                            <div class="card-body p-0" style="max-height: 400px; overflow-y: auto;">
                                <table class="table table-hover mb-0">
                                    <thead class="table-light sticky-top">
                                        <tr>
                                            <th style="width: 60px;">Mã</th>
                                            <th>Tên sản phẩm</th>
                                            <th class="text-center" style="width: 120px;">Giảm giá (%)</th>
                                            <th style="width: 60px;"></th>
                                        </tr>
                                    </thead>
                                    <tbody id="selectedProducts">
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <hr />
                <h5 class="mb-3"><i class="fas fa-boxes me-1"></i>Sản phẩm áp dụng (@Model.ChiTietKhuyenMais.Count sản phẩm)</h5>
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-light">
                            <tr>
                                <th>Mã SP</th>
                                <th>Tên sản phẩm</th>
                                <th class="text-center">Phần trăm giảm</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var ct in Model.ChiTietKhuyenMais)
                            {
                                <tr>
                                    <td>@ct.MaSP</td>
                                    <td>@ct.TenSP</td>
                                    <td class="text-center"><span class="badge bg-danger">-@ct.PhanTramGiam%</span></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            
            <hr />
            <div class="d-flex justify-content-between">
                <a href="@Url.Action("Index")" class="btn btn-secondary"><i class="fas fa-arrow-left me-1"></i>Quay lại</a>
                <button type="submit" class="btn btn-primary"><i class="fas fa-save me-1"></i>Cập nhật</button>
            </div>
        }
    </div>
</div>

@section scripts {
    <script>
        var canEditFull = @(canEditFull.ToString().ToLower());
        if (canEditFull) {
            var selectedProducts = {};
            
            // Load existing products from server
            var existingProducts = @Html.Raw(Newtonsoft.Json.JsonConvert.SerializeObject(Model.ChiTietKhuyenMais.Select(ct => new { ct.MaSP, ct.TenSP, ct.PhanTramGiam })));
            existingProducts.forEach(function(ct) {
                selectedProducts[ct.MaSP] = { tensp: ct.TenSP, giamGia: ct.PhanTramGiam };
            });
            renderSelectedProducts();
            
            // Tìm kiếm sản phẩm
            document.getElementById('searchSanPham').addEventListener('input', function() {
                var search = this.value.toLowerCase();
                var rows = document.querySelectorAll('#tableSanPham tbody tr');
                rows.forEach(function(row) {
                    var masp = row.getAttribute('data-masp').toLowerCase();
                    var tensp = row.getAttribute('data-tensp').toLowerCase();
                    if (selectedProducts[row.getAttribute('data-masp')]) {
                        row.style.display = 'none';
                    } else {
                        row.style.display = (masp.includes(search) || tensp.includes(search)) ? '' : 'none';
                    }
                });
            });
            
            // Thêm sản phẩm
            document.querySelectorAll('.btn-add-sp').forEach(function(btn) {
                btn.addEventListener('click', function() {
                    var row = this.closest('tr');
                    var masp = row.getAttribute('data-masp');
                    var tensp = row.getAttribute('data-tensp');
                    
                    if (selectedProducts[masp]) return;
                    
                    selectedProducts[masp] = { tensp: tensp, giamGia: 10 };
                    row.style.display = 'none';
                    
                    renderSelectedProducts();
                });
            });
            
            // Render danh sách đã chọn
            function renderSelectedProducts() {
                var tbody = document.getElementById('selectedProducts');
                tbody.innerHTML = '';
                var count = 0;
                
                for (var masp in selectedProducts) {
                    count++;
                    var item = selectedProducts[masp];
                    var tr = document.createElement('tr');
                    tr.innerHTML = `
                        <td>${masp}</td>
                        <td>${item.tensp}</td>
                        <td>
                            <input type="hidden" name="ChiTietKhuyenMais[${count-1}].MaSP" value="${masp}" />
                            <input type="number" name="ChiTietKhuyenMais[${count-1}].PhanTramGiam" 
                                   class="form-control form-control-sm text-center" 
                                   value="${item.giamGia}" min="1" max="100" required />
                        </td>
                        <td>
                            <button type="button" class="btn btn-sm btn-danger btn-remove-sp" data-masp="${masp}">
                                <i class="fas fa-times"></i>
                            </button>
                        </td>
                    `;
                    tbody.appendChild(tr);
                }
                
                document.getElementById('countSelected').textContent = count;
                
                // Bind remove buttons
                document.querySelectorAll('.btn-remove-sp').forEach(function(btn) {
                    btn.addEventListener('click', function() {
                        var masp = this.getAttribute('data-masp');
                        delete selectedProducts[masp];
                        var row = document.querySelector('#tableSanPham tr[data-masp="' + masp + '"]');
                        if (row) row.style.display = '';
                        renderSelectedProducts();
                    });
                });
            }
            
            // Validate form
            document.getElementById('formKhuyenMai').addEventListener('submit', function(e) {
                if (Object.keys(selectedProducts).length === 0) {
                    alert('Vui lòng chọn ít nhất 1 sản phẩm!');
                    e.preventDefault();
                    return false;
                }
            });
        }
    </script>
}
